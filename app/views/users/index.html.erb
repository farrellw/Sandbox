<h2>Users</h2>

<table class="user-management-table">
  <tr>
    <th>Username </th>
    <th>Email Address </th>
    <th>Current Admin/User Status</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= form_for (users_admin_path(user)) do |f|  %>
          <span>
            <%= f.select :role, options_for_select(["Banned", "User","Admin" ])%>
          </span>
            <%= f.submit "Update User Status" %>
          </span>
        <% end %></td>
    </tr>
  <% end %>
</table>
