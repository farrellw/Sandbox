<h2>Edit An Article</h2>
<%= form_for [@article, @article.versions.build] do |f| %>
  <%= f.fields_for :versions do |versions_form| %>
    <div>
      <%= versions_form.label :title %>
    </div>
    <div>
      <%= versions_form.text_field :title, value: @article.cached_title %>
    </div>
    <div>
      <%= versions_form.label :body %>
    </div>
    <div>
      <%= versions_form.cktext_area :body, rows: 10, value: @article.cached_body %>
    </div>
  <% end %>
  <div>
    <%= f.fields_for :categorizations do |categorizations_form| %>
    <div>
      <%= label_tag "Select all categories that apply:" %><br>
      <%= select_tag :category, options_from_collection_for_select(Category.all, :id, :name), multiple: true %>
    </div>
    <% end %>
  </div>
  <div>
    <%= f.submit 'Save Article' %>
  </div>
<% end %>
